<!-- Tastimonial Start -->
<div class="container-fluid">
    <div class="container">
        <div class="row g-4 justify-content-center">
            <div class="col-md-6 col-lg-4">
                <div class="service-item bg-secondary rounded border border-secondary">
                    <img src="@Model.ImageURL" class="img-fluid rounded w-100" alt="">
                </div>
            </div>
        </div>
        <div class="testimonial-header mt-3 mb-3">
            <h5> @Model.Title  </h5>
        </div>
        <div class="owl-carousel testimonial-carousel">
            <div class="testimonial-item img-border-radius bg-light rounded p-4">
                <div class="position-relative">
                    <div class="mb-4 pb-4 border-bottom border-secondary">
                        <p class="mb-4"> ပါဝင်ပစ္စည်းများ - </p>

                            @{
                                int ingredientNo = 1;
                            }
                            @foreach (var ingredient in Model.Ingredients)
                            {
                                <p class="card-text"> @ingredientNo. @ingredient.Name , @ingredient.Amount </p>
                                ingredientNo++;
                            }
                    </div>
                    <div class="mb-4 pb-4">
                        <p class="mb-4"> ချက်ပြုတ်နည်း - </p>

                        @foreach (var method in Model.Method)
                        {
                            <p class="card-text"> @method </p>
                        }
                    </div> 
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Tastimonial End -->
